<div class="container">
    
    <ul>
        <h1>My tasks</h1>
        <% @tasks.each do |task| %>
            <li>
                <% if task.completed %> 
                    <i class="far fa-check-square"></i>
                <% else %>
                    <i class="far fa-square"></i>
                <% end %>
                <%= link_to "#{task.title}", task_path(task) %>
            </li>
        <% end %>
    </ul>
</div>